# Possible ethernet cards - enable some that
# may not currently used, but that could be
CONFIG_E100=m
CONFIG_E1000=m
CONFIG_IGBVF=m
CONFIG_IXGBE=m
CONFIG_IXGBE_DCB=y
CONFIG_IXGBEVF=m
CONFIG_IGC=m

# Net virtualization
CONFIG_VFIO=m
CONFIG_VFIO_PCI=m
CONFIG_VFIO_PCI_VGA=y
CONFIG_VFIO_PCI_IGD=n
CONFIG_VIRTIO_MEM=m
CONFIG_VHOST_NET=m
CONFIG_VETH=m

CONFIG_INTEL_PMT_CRASHLOG=m
CONFIG_INTEL_RST=m
CONFIG_INTEL_IPS=m

# Required by IGT
CONFIG_FAULT_INJECTION=y
CONFIG_FAULT_INJECTION_DEBUG_FS=y
